using System;
using System.Threading;

namespace cv_lab
{
    class Programe
    {
        private static string x = "";
        private static int exitflag = 0;
        private static int updateFlag = 0;

        static void ThReadX(object i)
        {
            while(exitflag==0)
            {
                if (x != "exit")
                {
                    Console.WriteLine("***Thread {0} : {1}***",i,x);
                }
            }
            Console.WriteLine("---Thread {0} exit---",i);
        }

        static void ThWriteX()
        {
            string xx;
            while(exitflag == 0)
            {
                Console.Write("INput: ");
                xx = Console.ReadLine();
                if (xx == "exit")
                    exitflag = 1;
                x = xx;
            }
            
        }

        static void Main(string[] args)
        {
            Thread A = new Thread(new Thread(ThWriteX));
            Thread B = new Thread(new Thread(ThReadX));     
            Thread C = new Thread(new Thread(ThReadX)); 
            Thread D = new Thread(new Thread(ThReadX));        

            A.Start();
            B.Start(1);
            C.Start(2);
            D.Start(3);
                       
        }
    }
}
